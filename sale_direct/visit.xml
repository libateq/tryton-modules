      <field name="name">visit_event_sales_material_form</field>
    </record>

    <record model="ir.ui.view" id="visit_event_view_list">
      <field name="model">sale.direct.visit.event</field>
      <field name="type">tree</field>
      <field name="priority" eval="10"/>
      <field name="name">visit_event_list</field>
    </record>
    <record model="ir.ui.view" id="visit_event_view_form">
      <field name="model">sale.direct.visit.event</field>
